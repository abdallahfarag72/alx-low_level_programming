CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

$(OBJ):
	$(CC) -c $(SRC)

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(NAME): m.h
